page{
  background-color: #f0f0f0
}
.head{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  height: 80rpx;
}
.post-message{
  margin-left: 30rpx;
}
.post-nav{
  width: 80rpx;
  height: 80rpx;
  margin-left: 660rpx;
}
.post-icon{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.search{
  display: flex;
  background-color: #fff;
  height: 100rpx;

}
.search-box{
  display: flex;
  margin: 20rpx;
  margin-left: 40rpx;
  width: 440rpx;
  height: 60rpx;
  background-color: #fff;
  border: 1px solid #999;  
  border-radius: 10rpx; 
  
}
.search-icon{
  margin-left: 20rpx;
  margin-top: 10rpx;
}
search-input{
  font-size: 30rpx;
}
.search-button{
  width: 170rpx;
  height: 65rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  line-height: 1.8;
  background-color:#9370DB; 
  color: #fff;
  border: 1px solid #9B68F0;
  box-shadow: 2px 1px 1px #cccccc;
  font-size: 34rpx;
}
.search-button-hover{
  background-color: #4169E1;
  opacity: 0.7;
}
.tag{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.tag-button{
  background-color: #fff;
  width: 170rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 8rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  line-height: 2.7;
  padding-left: 10rpx;
  padding-right: 10rpx;
  color: #666;
}
.tag-icon{
  margin-top: 12rpx;
  margin-right: 10rpx;
  width: 55rpx;
  height: 55rpx;
}
.tag-button-hover{
  background-color:	#B0C4DE;
  border: 1px solid #778899;
  border-radius: 10rpx;
  opacity: 0.5;
  color: #000;
}
.post{
  background-color: #fff;
  margin: 50rpx;
  border: 2px solid #CCC;
  border-radius: 5px;
  position: relative;
}
.post-head{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.post-nickname{
  width: 400rpx;
  font-size: 34rpx;
  color: #555;
  margin-left: 20rpx;
}
.post-time{
  width: 300rpx;
  font-size: 30rpx;
  color: #555;
  text-align: right;
  padding-right: 20rpx;
  padding-top: 4rpx;

}
.post-content{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  text-align: left;
  color: #555;
}
.post-image{
  display: flex;
  align-items: center;
  justify-content: center;
}
.post-image-image{
  width: 450rpx;
}

.post-button{
  margin-top: 20rpx;
  display: flex;
}
.post-blank{
  width: 380rpx;
}
.like{
  width:100rpx;
  height:60rpx;
  background-color: #fff; 
  padding-top: 10rpx;
  line-height: 1;
  color: #555;
  font-size: 35rpx;
}
.like::after{
  border: none;
}
.like-hover{
  background-color: #FF6347;
  opacity: 0.7;
}
.like-icon{
  width: 40rpx;
  height: 40rpx;
}
.comment{
  width: 100rpx;
  height: 60rpx;
  background-color: #fff;
  line-height: 1;
  padding-top: 13rpx;
}
.comment::after{
  border: none;
}
.comment-hover{
  background-color: #4169E1;
  opacity: 0.7;
}
.comment-icon{
  width: 40rpx;
  height: 40rpx;
}
.report{
  width:100rpx;
  height:60rpx;
  background-color: #fff; 
  padding-top: 13rpx;
  line-height: 1;
  color: #555;
  font-size: 35rpx;
}
.report::after{
  border: none;
}
.report-hover{
  background-color: #ccc;
  opacity: 0.7;
}
.report-icon{
  width: 40rpx;
  height: 40rpx;
}
.post-comment{
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: #F5F8F8;
  font-size: 30rpx;
  text-align: left;

}
.comment-title{
  margin-left: 20rpx;
  color: #555;

}
.comment-text{
  margin-left: 20rpx;
  color: #555;
}
.line{
  margin:10rpx;
  height: 1rpx;
  background-color: #AAA;
}


